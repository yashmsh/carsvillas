pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build and Test') {
            steps {
                // Add build and test steps here
                sh 'echo "Building and testing..."'
            }
        }
        
        stage('Deploy to Staging') {
            when {
                branch 'main'
            }
            steps {
                // Add deployment steps here
                sh 'echo "Deploying to staging..."'
            }
        }
        
        stage('Deploy to Production') {
            when {
                branch 'main'
                // Optionally, you can include additional conditions
                // such as successful builds, specific users, etc.
            }
            steps {
                // Pause the pipeline and wait for manual input
                input "Deploy to production?"
                
                // Add deployment steps to production here
                // These steps will only execute if the input is approved
                sh 'echo "Deploying to production..."'
            }
        }
    }
}
