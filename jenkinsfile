pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build and Test') {
            steps {
                // Add build and test steps here
                sh 'echo "Building and testing..."'
            }
        }
        
        stage('Deploy to Staging') {
            when {
                branch 'main'
            }
            steps {
                // Add deployment steps to staging here
                sh 'echo "Deploying to staging..."'
            }
        }
        
        stage('Deploy to Production') {
            when {
                branch 'main'
            }
            steps {
                // Pause the pipeline and wait for manual input
                input message: 'Deploy to production?', submitter: 'mishra'
                
                // Add deployment steps to production here
                sh 'echo "Deploying to production..."'
            }
        }
    }
}
