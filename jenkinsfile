pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'echo building'
                sh 'cp env.example .env'
                sh 'pip3 install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
               sh 'echo testing'
               sh 'python3 manage.py test'
            }
        }

        stage('Deploy to staging') {
            steps {
                sh 'echo deploying'
                // stage-vm credential
                sh 'ssh stage@103.15.67.179  -o StrictHostKeyChecking=no " bash /var/www/Dev-project/scripts/deploy.sh "'
            }
        }

        stage('Deploy to production') {
            input {
                message "Shall we deploy to production sir?"
                ok "Yes please"
            }
            steps {
                sh 'echo deploying'
                // production-vm credentials
                sh 'ssh yashjenkins@20.211.41.97 -o StrictHostKeyChecking=no " bash /var/www/Dev-project/scripts/deploy.sh "'
            }
        }

    }
    // apply to the whole pipeline

    post {
     // send email notification the specicied addresses if the build fails
        failure {  
             mail bcc: '', body: "<b>Failed Jenkins Build</b><br>Project: ${env.JOB_NAME} \
             <br>Build Number: ${env.BUILD_NUMBER} <br> URL of the build: ${env.BUILD_URL}", cc: '', \
             charset: 'UTF-8', from: 'jenkins@jenkins.test', mimeType: 'text/html', replyTo: 'put@youremail.com', \
             subject: "ERROR CI: Project name -> ${env.JOB_NAME}", \
             to: "myashvardhan2@gmail.com";  \
         }
    }
}
