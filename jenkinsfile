pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Add checkout SCM step here
                checkout scm
            }
        }
        
        stage('Build and Test') {
            steps {
                // Add build and test steps here
                sh 'echo "Building and testing..."'
            }
        }
        
        stage('Deploy to Staging') {
            when {
                branch 'main'
            }
            steps {
                // Add deployment steps here
                sh 'echo "Deploying to staging..."'
            }
        }
    }
}
